@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+Display:wght@300&display=swap');
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Noto+Sans+Display;
}

body{
    background: black;
    color: #ededed;
}


.clearfix::after{
    content: "";
    display: block;
    clear: both;
}

.header{
    position: sticky;
    top: 0;
    left: 0;
    width: 100%;
    padding: 20px 10%;
    background: GREY;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 100;
}

.logo{
    position: relative;
    font-size: 35px;
    color: #ededed;
    text-decoration: none;
    font-weight: 600;
}

.logo::before{
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background: white;
    animation: showRight 1s ease forwards;
   
}

.navbar a{
    font-size: 18px;
    color: #ededed;
    text-decoration: none;
    font-weight: 500;
    margin-right: 35px;
    transition: .3s;
}

.navbar a:hover,
.navbar a.active{
    color: #00abf0;
}


.home{
    position: relative;
    display: grid;
    grid-template-columns: 1fr 1fr;
    height: 100vh;
    align-items: center;
    padding: 0 10%;
}

.home .home-left{
    max-width: 600px;
}

.home-left h1{
    position: relative;
    font-size: 53px;
    font-weight: 700;
}

.home-left h1::before{
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background: black;
    animation: showRight 1s ease forwards;
    
}

.home-left h3{
    position: relative;
    font-size: 32px;
    font-weight: 700;
    color: #00abf0;
}

.home-left h3::before{
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background: black;
    animation: showRight 1s ease forwards;
    
}

.home-left p{
    position: relative;
    margin-top: 2%;
    font-size: 16px;
}

.home-left p::before{
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background: black;
    animation: showRight 1s ease forwards;
    
}

.home-left .btn-box{
    position: relative;
    width: 345px;
    height: 50px;
    margin-top: 5%;
}

.home-left .btn-box::before{
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background: black;
    animation: showRight 1s ease forwards;
    
    z-index: 2;
}

.btn-box a{
    position: relative;
    display: inline-block;
    justify-content: center;
    align-items: center;
    padding: 2%;
    background: #00abf0;
    border: 2px solid #00abf0;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    letter-spacing: 1px;
    z-index: 1;
    overflow: hidden;
}

.btn-box a:hover{
    color: #00abf0;
}

.btn-box a:nth-child(2){
    background: transparent;
    color: #00abf0;
}
 
.btn-box a::before{
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    background: #081b29;
    z-index: -1;
    transition: .5s;
} 

.btn-box a:hover::before{
    width: 100%;
}

.home-right{
    width: 200%;
    height: 50%;
	background-image: url('det2.jpg');
    background-repeat: no-repeat;

	
}

.home-right::before{
    content: '';
    position: absolute;
    top: 0;
    right: 10;
    width: 100%;
    height: 300%;
    background: black;
    animation: showRight 1s ease forwards;
    z-index: 2;
}

