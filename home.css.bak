#html-bar{
    animation: html-fill 2s forwards;
}
@keyframes html-fill{
    100%{
        width: 90%;
    }
}
#css-bar{
    animation: css-fill 2s forwards;
}
@keyframes css-fill{
    100%{
        width: 75%;
    }
}
#Cpp-bar{
    animation: Cpp-fill 2s forwards;
}
@keyframes Cpp-fill {
    100%{
        width: 72%;
    }
}
#Python-bar{
    animation: Python-fill 2s forwards;
}
@keyframes Python-fill{
    100%{
        width: 58%;
    }
} 

@keyframes showRight{
    100%{
        width: 0;
    }
}

